<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>

<div class="container">
  <form method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="inputTitle">Category</label>
      <select class="custom-select" name="category">
        <option>Select category</option>
        <% for (var i=0; i < category.length; i++) { %>
          <option value="<%= category[i].id %>"><%= category[i].title %></option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="inputTitle">Title</label>
      <input type="text" name="title" class="form-control" id="inputTitle" aria-describedby="inputTitle" placeholder="Enter title">
      <small id="titleHelp" class="form-text text-muted"> 제목을 입력해주세요.</small>
    </div>
    <div class="form-group">
      <label for="inputDesc">Description</label>
      <textarea name="desc" rows="8" cols="80" class="form-control" id="inputDesc"></textarea>
      <small id="descHelp" class="form-text text-muted">내용을 입력해주세요.</small>
    </div>
    <div class="form-group">
      <label for="inputTitle">Teacher</label>
      <input type="text" name="author" class="form-control" id="inputAuthor" aria-describedby="inputAuthor" placeholder="Enter author">
      <small id="authorHelp" class="form-text text-muted">선생님의 이름을 입력해주세요. </small>
    </div>
    <div class="form-group col-sm-4">
        <div class="custom-file">
          <input type="file" name="upload" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
          <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
        </div>
    </div>
    <button type="submit" class="btn btn-warning" >작성하기</button>
    <a href="/icheck" class="btn btn-secondary">취소</a>
  </form>
</div>
<br>
<%- include('includes/footer'); -%>
